{
  "name": "ugram-backend",
  "version": "0.1.0",
  "private": true,
  "main": "src/main.ts",
  "author": "Team 3 for course GLO-3112 (Winter 2021)",
  "license": "MIT",
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "express": "^4.17.1",
    "mongoose": "^5.11.15",
    "tsoa": "^3.5.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.24",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "node-factory": "^0.4.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "build:routes": "tsoa routes",
    "build:swagger": "tsoa swagger",
    "build:ts": "tsc",
    "build:all": "yarn build:routes && yarn build:swagger && yarn build:ts",
    "start": "node build/main.js",
    "start:watch": "nodemon --watch src --ext ts --exec ts-node --ignore '*.test.*' --delay 3 src/main.ts",
    "lint": "eslint --ext .tsx --ext .ts src/",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "prettier --write",
      "yarn lint --fix"
    ]
  }
}
